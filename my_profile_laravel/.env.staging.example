# ==============================================
# Staging Environment Variables
# ==============================================
# For testing production-like environment before deployment

# Application
APP_NAME="YAMU Laravel (Staging)"
APP_ENV=staging
APP_KEY=base64:GENERATE_WITH_php_artisan_key_generate
APP_DEBUG=true
APP_URL=https://staging.yourdomain.com

# Locale
APP_LOCALE=zh_TW
APP_FALLBACK_LOCALE=zh_TW
APP_FAKER_LOCALE=zh_TW

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=my_profile_staging
DB_USERNAME=staging
DB_PASSWORD=CHANGE_ME_STAGING_PASSWORD
DB_ROOT_PASSWORD=CHANGE_ME_STAGING_ROOT_PASSWORD

# Cache & Session
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true

# Queue
QUEUE_CONNECTION=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379

# Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS="staging@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# JWT Configuration
JWT_SECRET=GENERATE_WITH_php_artisan_jwt_secret
JWT_TTL=60
JWT_REFRESH_TTL=10080
JWT_ALGO=HS256
JWT_BLACKLIST_ENABLED=true

# Docker
APP_VERSION=staging
NGINX_PORT=8083
DB_PORT=3308
REDIS_PORT=6380
